!startsub state
skinparam state {
	StartColor $INFO
	EndColor $INFO
	BackgroundColor $SECONDARY-$SECONDARY_DARK
	BorderColor $SECONDARY_DARK
	FontColor $INFO
	AttributeFontColor $SECONDARY_TEXT
