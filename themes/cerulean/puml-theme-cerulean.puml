	BorderThickness 1
	BackgroundColor $INFO_LIGHT-$INFO
	BorderColor $INFO
	FontColor $WHITE
}
!endsub

!startsub artifact
skinparam artifact {
	BackgroundColor $WHITE-$LIGHT
	BorderColor $GRAY
	FontColor $GRAY
}
!endsub

!startsub component
skinparam component {
	BackgroundColor  $SUCCESS_LIGHT-$SUCCESS
	BorderColor  $SUCCESS
	FontColor $SUCCESS_TEXT
}
!endsub

!startsub interface
skinparam interface {
	BackgroundColor  $DANGER_LIGHT
	BorderColor  $DANGER
	FontColor $DARK
}
!endsub

!startsub storage
skinparam storage {
	BackgroundColor $WARNING_LIGHT-$WARNING
  	BorderColor $WARNING
	FontColor $WARNING_TEXT
}
!endsub

!startsub node
skinparam node {
	BackgroundColor $SECONDARY_LIGHT-$SECONDARY
	BorderColor $DARK
	FontColor $DARK
}
!endsub

!startsub cloud
skinparam cloud {
	BackgroundColor white-lightskyblue
	BorderColor $BGCOLOR
	FontColor $DARK
}
!endsub

!startsub database
skinparam database {
	BackgroundColor  $PRIMARY_LIGHT-$PRIMARY
	BorderColor $PRIMARY_DARK
