	BorderColor $INFO
	FontColor $INFO_TEXT
}
!endsub

!startsub file
skinparam file {
	BackgroundColor $SECONDARY_LIGHT-$SECONDARY
	BorderColor $GRAY
	FontColor $GRAY

}
!endsub

!startsub stack
skinparam stack {
