    ActorBorderColor $PRIMARY
	ActorFontColor $PRIMARY
	''
	ArrowColor $LIGHT
	ArrowThickness 4
	''
	BoxBackgroundColor $LIGHT
	BoxBorderColor $GRAY
	BoxFontColor $DARk
	''
